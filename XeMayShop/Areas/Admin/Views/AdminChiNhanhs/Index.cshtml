@model IEnumerable<XeMayShop.Models.ChiNhanh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách các chi nhánh</h2>

            <a href="~/Admin/AdminChiNhanhs/Create">
                <button type="button" class="btn btn-primary btn-fw">Thêm chi nhánh mới</button>
            </a>


            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Mã Chi nhánh
                            </th>
                            <th style="color:white">
                                Tên chi nhánh
                            </th>

                            <th style="color:white">
                                Địa chỉ
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaChiNhanh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenChiNhanh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>

                                <td>
                                    <a href="~/Admin/AdminChiNhanhs/Details/@item.MaChiNhanh">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminChiNhanhs/Edit/@item.MaChiNhanh">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminChiNhanhs/Delete/@item.MaChiNhanh">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

