@model IEnumerable<XeMayShop.Models.PhieuDatXe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách các phiếu đặt xe</h2>

            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Tên người đặt xe
                            </th>
                            <th style="color:white">
                                SDT
                            </th>
                            <th style="color:white">
                                Tên xe
                            </th>

                            <th style="color:white">
                                Màu xe
                            </th>

                            <th style="color:white">
                                Ngày đặt
                            </th>
                            <th style="color:white">
                                Tình trạng
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenNguoiDat)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Xe.TenXe)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Xe.MauXe)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayDat)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TinhTrang)
                                </td>

                                <td>
                                    <a href="~/Admin/AdminPhieuDatXes/Details/@item.MaPhieuDatXe">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminPhieuDatXes/Edit/@item.MaPhieuDatXe">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminPhieuDatXes/Delete/@item.MaPhieuDatXe">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

