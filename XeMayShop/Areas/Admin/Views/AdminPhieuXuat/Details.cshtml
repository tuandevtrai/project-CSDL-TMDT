@model XeMayShop.Models.PhieuXuat

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết phiếu xuất </h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã phiếu xuat</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MaPhieuXuat)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Nhân viên</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.NhanVien.TenNhanVien)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Khách hàng</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.KhachHang.TenKhachHang)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Khách hàng</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.ChiNhanh.TenChiNhanh)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Mã xe</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MaXe)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Màu xe</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MauXe)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Ngày xuất</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.NgayXuat)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Thành tiền xuất</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.ThanhTienXuat)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Ghi chú</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.GhiChu)
                    </div>
                </div>

                <a href="~/Admin/AdminPhieuXuat/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            </form>
        </div>
    </div>
</div>

