@model XeMayShop.Models.NhanVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh sách nhân viên </h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã nhân viên</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MaNhanVien)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên nhân viên</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.TenNhanVien)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Năm sinh</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.NamSinh)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Giới tính</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.GioiTinh)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Điện thoại</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.DienThoai)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Địa chỉ</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.DiaChi)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Thuộc chi nhánh</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.ChiNhanh.TenChiNhanh)
                    </div>
                </div>


                <a href="~/Admin/AdminNhanVien/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            </form>
        </div>
    </div>
</div>

