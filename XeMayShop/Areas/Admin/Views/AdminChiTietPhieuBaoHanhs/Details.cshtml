@model XeMayShop.Models.ChiTietPhieuBaoHanh

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết phiếu bảo hành </h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã chi tiết phiếu bảo hành</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MaChiTietPhieuBaoHanh)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã phiếu bảo hành</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MaPhieuBaoHanh)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Ngày bảo hành</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.NgayBaoHanh)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Ghi chú</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.GhiChu)
                    </div>
                </div>
              
                <a href="~/Admin/AdminChiTietPhieuBaoHanhs/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            </form>
        </div>
    </div>
</div>
