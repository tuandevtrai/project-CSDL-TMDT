@model IEnumerable<XeMayShop.Models.ChiTietPhieuBaoHanh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách chi tiết phiếu bảo hành</h2>

            <a href="~/Admin/AdminChitietPhieuBaoHanhs/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo chi tiết phiếu bảo hành mới</button>
            </a>


            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Mã chi tiết phiếu bảo hành
                            </th>
                            <th style="color:white">
                                Mã phiếu bảo hành
                            </th>
                            <th style="color:white">
                                Ngày bảo hành
                            </th>
                            <th style="color:white">
                                Ghi chú
                            </th>                           
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaChiTietPhieuBaoHanh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaPhieuBaoHanh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayBaoHanh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GhiChu)
                                </td>
                               
                                <td>
                                    <a href="~/Admin/AdminChiTietPhieuBaoHanhs/Details/@item.MaChiTietPhieuBaoHanh">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietPhieuBaoHanhs/Edit/@item.MaChiTietPhieuBaoHanh">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietPhieuBaoHanhs/Delete/@item.MaChiTietPhieuBaoHanh">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


