@model IEnumerable<XeMayShop.Models.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách Admin</h2>

            <a href="~/Admin/Admins/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một tài khoản admin mới</button>
            </a>        
            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Mã Admin
                            </th>
                            <th style="color:white">
                                Tên Admin
                            </th>
                            <th style="color:white">
                                Tên đăng nhập
                            </th>
                            <th style="color:white">
                                Mật khẩu
                            </th>                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaAdmin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenAdmin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDangNhap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MatKhau)
                                </td>
                                <td>
                                    <a href="~/Admin/Admins/Details/@item.MaAdmin">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/Admins/Edit/@item.MaAdmin">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/Admins/Delete/@item.MaAdmin">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
