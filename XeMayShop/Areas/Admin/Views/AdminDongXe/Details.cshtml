@model XeMayShop.Models.DongXe

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết dòng xe </h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã dòng xe</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MaDongXe)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên dòng xe</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.TenDongXe)
                    </div>
                </div>


                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Số lượng hiện có</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.SoLuongHienCo)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Loại xe</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.LoaiXe.TenLoaiXe)
                    </div>
                </div>

                <a href="~/Admin/AdminDongXe/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            </form>
        </div>
    </div>
</div>
