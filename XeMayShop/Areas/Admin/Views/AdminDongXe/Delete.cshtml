@model XeMayShop.Models.DongXe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Bạn có thực sự muốn xóa dòng xe này không!!!</h2>
                <h4 class="card-title">Chi tiết thông tin xe</h4>

                <form class="forms-sample">
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã xe</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.MaDongXe)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên xe</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.TenDongXe)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Loại xe</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.LoaiXe.TenLoaiXe)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Số lượng hiện có</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.SoLuongHienCo)
                        </div>
                    </div>
                    @if (ViewBag.ErrorInfo != null)
                    {
                        <p class="text-danger">@ViewBag.ErrorInfo</p>
                    }
                </form>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button style="width:180px; type="submit" value="Delete" class="btn btn-primary mr-2">Delete</button>
        </div>
    }

    <a href="~/Admin/AdminDongXe/Index">
        <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
    </a>
</div>
