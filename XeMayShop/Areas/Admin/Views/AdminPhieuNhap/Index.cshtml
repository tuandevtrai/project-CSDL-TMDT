@model IEnumerable<XeMayShop.Models.PhieuNhap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách các phiếu nhập</h2>
            <a href="~/Admin/AdminPhieuNhap/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một phiếu nhập mới</button>
            </a>
            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Mã phiếu nhập
                            </th>
                            <th style="color:white">
                                Nhân viên
                            </th>
                            <th style="color:white">
                                Nhà cung cấp
                            </th>
                            <th style="color:white">
                                Chi nhánh
                            </th>
                            <th style="color:white">
                                Ngày nhập
                            </th>
                            <th style="color:white">
                                Tổng số xe nhập
                            </th>
                            <th style="color:white">
                                Thành tiền nhập
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaPhieuNhap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NhaCungCap.TenNhaCungCap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ChiNhanh.TenChiNhanh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayNhap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TongSoXeNhap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ThanhTienNhap)
                                </td>
                                <td>
                                    <a href="~/Admin/AdminPhieuNhap/Details/@item.MaPhieuNhap">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminPhieuNhap/Edit/@item.MaPhieuNhap">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminPhieuNhap/Delete/@item.MaPhieuNhap">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietPhieuNhap/Index/?MaPhieuNhap=@item.MaPhieuNhap">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-light  btn-fw">Chi tiết PN</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
