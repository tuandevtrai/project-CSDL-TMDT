@model XeMayShop.Models.ChiTietPhieuNhap

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết phiếu nhập </h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã phiếu</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MaPhieuNhap)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên xe</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.Xe.TenXe)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Số lượng nhập</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.SoLuongNhap)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Đơn giá nhập</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.DonGiaNhap)
                    </div>
                </div>
                <a href="~/Admin/AdminChiTietPhieuNhap/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            </form>
        </div>
    </div>
</div>