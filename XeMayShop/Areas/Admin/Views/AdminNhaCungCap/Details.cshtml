@model XeMayShop.Models.NhaCungCap

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết nhà cung cấp </h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã nhà cung cấp</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MaNhaCungCap)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên nhà cung cấp</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.TenNhaCungCap)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Địa chỉ</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.DiaChi)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Điện thoại</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.DienThoai)
                    </div>

                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>

                <a href="~/Admin/AdminNhaCungCap/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            </form>
        </div>
    </div>
</div>

