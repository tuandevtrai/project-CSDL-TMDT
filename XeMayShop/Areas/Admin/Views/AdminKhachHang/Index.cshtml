@model IEnumerable<XeMayShop.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách khách hàng</h2>
            <a href="~/Admin/AdminKhachHang/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo thông tin một khách hàng mới</button>
            </a>            

            <h4 style="margin-top:20px">Tìm kiếm thông tin khách hàng</h4>
            <form>
                <div>

                    <input type="text" class="form-control" placeholder="Tên khách hàng" name="TenKH" style="width:30%; display:inline-block;margin-right:10px">

                    <input type="text" class="form-control" placeholder="Số điện thoại" name="SDT" style="width: 30%; display: inline-block; margin-right: 10px">

                    <button type="submit" class="btn btn-primary btn-fw" style="margin-top:20px">tìm kiếm</button>
                </div>
            </form>


            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Mã khách hàng
                            </th>
                            <th style="color:white">
                                Tên khách hàng
                            </th>
                            <th style="color:white">
                                Điện thoại
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaKhachHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenKhachHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DienThoai)
                                </td>
                                <td>
                                    <a href="~/Admin/AdminKhachHang/Details/@item.MaKhachHang">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminKhachHang/Edit/@item.MaKhachHang">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminKhachHang/Delete/@item.MaKhachHang">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
