@model IEnumerable<XeMayShop.Models.PhieuDatXe>
@using XeMayShop.Models;
@{
    ViewBag.Title = "TimKiemDonDatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">
    <div class="container">
        <h2 style="margin-bottom: 50px; text-align: center">Tất cả phiếu đặt xe</h2>
        <div class="row">
            <div class="col-lg-12">

                <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                    <input type="text" class="form-control" placeholder="Tìm kiếm phiếu đặt xe theo số điện thoại" name="SoDienThoai">
                </form>

                <div class="shop__cart__table">
                    @if (Model == null)
                    {
                        <h3 style="text-align:center">Không có phiếu đặt xe nào được tìm thấy</h3>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <div class="Large_table">
                                <table class="hoadon">
                                    <thead>
                                        <tr>
                                            <th>Tên Khách hàng</th>
                                            <th>Số điện thoại khách hàng</th>
                                            <th>Tình trạng</th>
                                            <th>Ngày đặt xe</th>                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>

                                            <input type="hidden" value="@item.MaPhieuDatXe" name="ID HoaDon" />
                                            <td class="cart__product__item__title">@Html.DisplayFor(Model => item.TenNguoiDat)  </td>
                                            <td class="cart__product__item__title">@Html.DisplayFor(Model => item.SDT)  </td>
                                            <td class="cart__product__item__title">@Html.DisplayFor(Model => item.TinhTrang)</td>
                                            <td class="cart__product__item__title">@Html.DisplayFor(Model => item.NgayDat)  </td>                                         

                                        </tr>
                                    </tbody>
                                </table>                                
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Cart Section End -->

<style>
    td {
        text-align: center;
        margin: 5px;
    }

    th {
        margin: 5px;
        text-align: center;
    }

    * {
        margin: 0;
        padding: 0;
    }    
</style>