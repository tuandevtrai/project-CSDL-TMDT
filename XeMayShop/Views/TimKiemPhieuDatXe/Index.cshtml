@model IEnumerable<XeMayShop.Models.PhieuDatXe>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="shop-cart spad">
    <div class="container">
        <h2 style="margin-bottom:50px; text-align:center">Các phiếu đặt xe</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">

                    <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                        <input type="text" class="form-control" placeholder="Tìm kiếm phiếu đặt xe theo số điện thoại đăng ký" name="SoDienThoai">
                    </form>
                    @if (Model == null)
                    {
                        <h3 style="text-align:center">Không có đơn phiếu đặt xe nào có số điện thoại như đã nhập</h3>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <div class="Large_table">
                               
                                @using (Html.BeginForm("HuyPhieuDatXe", "TimKiemPhieuDatXe"))
                                {


                                    <table class="dondathang" style="margin-top:20px">
                                        <thead>
                                            <tr>
                                                <th>Tên người đặt xe</th>`
                                                <th>Số điện thoại</th>
                                                <th>Tên xe</th>
                                                <th>Màu xe</th>
                                                <th>Ngày đặt</th>
                                                <th>Tình trạng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <input type="hidden" value="@item.MaPhieuDatXe" name="MaPhieuDatXe" />
                                                <td class="cart__product__item__title" style="text-align:left">@Html.DisplayFor(Model => item.TenNguoiDat)  </td>
                                                <td class="cart__product__item__title">@Html.DisplayFor(Model => item.SDT)  </td>
                                                <td class="cart__price money">@Html.DisplayFor(Model => item.Xe.TenXe)  </td>
                                                <td class="cart__product__item__title">@Html.DisplayFor(Model => item.Xe.MauXe)  </td>
                                                <td class="cart__product__item__title">@Html.DisplayFor(Model => item.NgayDat)  </td>
                                                <td class="cart__product__item__title">@Html.DisplayFor(Model => item.TinhTrang)  </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="btnhuy" style="margin-top:20px">
                                        <input type="submit" name="HuyPhieuDatXe" value="Hủy đơn hàng" class="site-btn">
                                    </div>
                                }
                            </div>
                        }
                    }


                </div>
            </div>
        </div>
    </div>
</section>


<style>
    .btnhuy {
        text-align: center;
        margin-bottom: 10px;
    }

    .Large_table {
        padding: 40px;
        border: solid 3px;
        border-radius: 10px 10px 10px 10px;
        margin-bottom: 20px;
    }

    .dondathang {
        color: red;
    }

    td {
        text-align: center;
        margin: 5px;
    }

    th {
        margin: 5px;
        text-align: center;
    }
</style>